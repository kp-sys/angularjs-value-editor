main.container-fluid(ng-controller="demoController as $ctrl" ng-init="isDisabled = false")
    button.btn.btn-default(ng-click="$ctrl.forceShowErrors()") Show errors &nbsp;
        i.glyphicon.glyphicon-ok(ng-show="$ctrl.showErrors")

    .row
        .col-sm-4
            kp-universal-form(
                form-id="form-md"
                name="myForm"
                form-settings="::{fields: $ctrl.fields}"
                form-controller="formController = $formController"
                on-submit="$ctrl.submit()"
                labels-width="2"
                show-errors="$ctrl.showErrors"
                ng-model="$ctrl.model"
                size="'md'"
            )
        .col-sm-4
            kp-universal-form(
                form-id="form-sm"
                name="myForm"
                form-settings="::{fields: $ctrl.fields}"
                form-controller="formController = $formController"
                on-submit="$ctrl.submit()"
                labels-width="2"
                show-errors="$ctrl.showErrors"
                ng-model="$ctrl.model"
                size="'sm'"
            )
        .col-sm-4
            kp-universal-form(
                form-id="form-xs"
                name="myForm"
                form-settings="::{fields: $ctrl.fields}"
                form-controller="formController = $formController"
                on-submit="$ctrl.submit()"
                labels-width="2"
                show-errors="$ctrl.showErrors"
                ng-model="$ctrl.model"
                size="'xs'"
            )


    button(type="button" ng-click="$ctrl.model = undefined") Reset

    div
        label Disabled:
            input(type="checkbox" ng-model="isDisabled")

    div Value:
        input(ng-model="$ctrl.model")

    div Model: {{$ctrl.model | json}}

    button(type="button" ng-click="$ctrl.clear()") Clear

    pre(ng-bind="formController | json")

    pre(ng-bind="$ctrl.fields | json")
